<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
/>
<link rel="stylesheet" href="css/app.css">
<style>
    .swiper {
  width: 600px;
  height: 200px;
}
</style>
</head>
<body>
    <div class="swiper h-10 w-full">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper w-full">
          <!-- Slides -->
          <div class="swiper-slide drop-shadow-lg">
                <div class="w-full h-full space-y-10
                 bg-red-500  flex justify-center flex-col items-center">
                    <h1 class="text-4xl text-white font-semibold">10,000</h1>
                    <p class="text-lg font-semibold text-white">Premium Brands</p>
                </div>
          </div>
          <div class="swiper-slide">Slide 2</div>
          <div class="swiper-slide">Slide 3</div>
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>
      
      </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js">
    
</script>
<script>
    const swiper = new Swiper('.swiper', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,
  spaceBetween: 30,
        centeredSlides: true,
        autoplay: {
          delay: 4800,
          disableOnInteraction: false,
        },
  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
  },

  
});
</script>
</html>